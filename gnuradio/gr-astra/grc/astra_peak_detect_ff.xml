<?xml version="1.0"?>
<block>
  <name>peak_detect_ff</name>
  <key>astra_peak_detect_ff</key>
  <category>astra</category>
  <import>import astra</import>
  <make>astra.peak_detect_ff($percent,$window_size)</make>
  <param>
    <name>percent of average</name>
    <key>percent</key>
	<value>100</value>
    <type>int</type>
  </param>
  <param>
    <name>window size</name>
    <key>window_size</key>
	<value>1000</value>
    <type>int</type>
  </param>
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
